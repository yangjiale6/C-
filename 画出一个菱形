#include <stdio.h>
#include <string.h>
#include <math.h>
int main()
{
	int line = 0;
	scanf_s("%d", &line);
	for (int i = 1; i <= line; i++)
	{
		for (int j = 0; j < line - i; j++)
		{
			printf(" ");
		}
		for (int k = 0; k < 2 * i - 1; k++)
		{
			printf("*");
		}
		printf("\n");
	}
	for (int i = 1; i <= line-1; i++)
	{
		for (int j = 0; j < i; j++)
		{
			printf(" ");
		}
		for (int k = 0; k < 2 * (line - i)-1; k++)
		{
			printf("*");
		}
		printf("\n");
	}
	return 0;
}
